<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- role별로 접근할 수 있는 리소스를 정의하는 작업 -->
<security:http auto-config="true" use-expressions="true" name="erp" pattern="/erp/**">
	<security:intercept-url pattern="/erp/login.do" access="permitAll"/>
	<security:intercept-url pattern="/erp/**" access="hasAnyRole('ROLE_EMP','ROLE_ADMIN')"/>

	<security:form-login 
	username-parameter="id"
	password-parameter="pwd"
	login-page="/erp/login.do"
	default-target-url="/erp/index.do"
	authentication-failure-url="/erp/login.do?fail=true"
	authentication-success-handler-ref="successHandler"/>
	
	<security:logout
	delete-cookies="true"
	logout-success-url="/erp/login.do"
	logout-url="/erp/logout.do"
	invalidate-session="true"	
	/>
		
</security:http>

<security:http auto-config="true" use-expressions="true" name="main">
	<security:intercept-url pattern="/main/signin.do" access="permitAll"/>
	<security:intercept-url pattern="/main/index.do" access="permitAll"/>
	<security:intercept-url pattern="/main/flight.do" access="permitAll"/>
	<security:intercept-url pattern="/main/realtime.do" access="permitAll"/>
	<security:intercept-url pattern="/main/privacy.do" access="permitAll"/>
	<security:intercept-url pattern="/main/email.do" access="permitAll"/>
	<security:intercept-url pattern="/main/admin" access="hasRole('ROLE_ADMIN')"/>	
	<security:intercept-url pattern="/main/myservice.do" access="hasRole('ROLE_ADMIN')"/>	
	<security:intercept-url pattern="/main/**" access="permitAll"/>	
	<security:intercept-url pattern="/**" access="permitAll"/> 

	<security:form-login 
	username-parameter="id"
	password-parameter="pwd"
	login-page="/main/signin.do"
	default-target-url="/main/index.do"
	authentication-failure-url="/main/signin.do?fail=true"
	authentication-success-handler-ref="successHandler"/>
	
	<security:logout
	delete-cookies="true"
	logout-success-url="/main/signin.do"
	logout-url="/member/logout.do"
	invalidate-session="true"	
	/>
		
</security:http>


<!-- 로그인 성공시에 처리할 일들이 있는 경우 객체 정의 -->
<bean id="successHandler" class="main.member.authentication.LoginSuccessHandler" />

<!-- 인증처리를 담당하는 객체가 무엇인지 정의 (테스트용)-->
<security:authentication-manager>
	<security:authentication-provider ref="memberProvider">
	</security:authentication-provider>
</security:authentication-manager>


<bean id="memberProvider" class="main.member.authentication.MemberAuthenticationProvider"/>
<import resource="spring-config.xml"/>

</beans>
